<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body>

    <h1>logged In</h1>

 
   <div class="mb-3">
        <label for="departmentDropdown" class="form-label">Department</label>
        <select class="form-select" id="departmentDropdown">
            <option value="" selected>All Departments</option>
            <% const seenDepartments = new Set();
            for (var i = 0; i < alluser.length; i++) {
                const department = alluser[i].department;
                if (!seenDepartments.has(department)) {
                    seenDepartments.add(department); %>

                    <option value="<%= department %>"><%= department %></option>
                <% }
            } %>
        </select>
    </div> 

    <div class="mb-3">
        <label for="projectDropdown" class="form-label">Project</label>
        <select class="form-select" id="projectDropdown">
            <option value="" selected>All project</option>
            <% const seenProject = new Set();
            for (var i = 0; i < alluser.length; i++) {
                const project = alluser[i].project;
                if (!seenProject.has(project)) {
                    seenProject.add(project); %>

                    <option value="<%= project %>"><%= project %></option>
                <% }
            } %>
        </select>
    </div> 

   


    <table class="table" id="userData">
        <thead>
            <tr>
                <th>User</th>
                <th>Department</th>
                <th>Project</th>
            </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < alluser.length; i++) { %>
                <tr data-department="<%= alluser[i].department %>" data-project="<%= alluser[i].project %>">

                <form action="/edit_user" method="post">
                    <td> <input type="text" name="name" value="<%= alluser[i].name %>">
                    </td>
                    
                    <td><input type="text" name="department" value="<%= alluser[i].department %>"></td>

                    <td><input type="text" name="project" value="<%= alluser[i].project %>"></td>

                    <td>
                        <input type="text" name="user_id" value="<%= alluser[i]._id %>" style="visibility: hidden;">
                    </td>
                    <td>
                        <button type="submit">editData</button>
                    </td>
                   
                </form>
                <form action="/delete" method="post">
                    <input type="text" name="user_id" style="visibility: hidden;" value="<%= alluser[i]._id %>">
                    <td>
                        <button type="submit">DeleteData</button>
                    </td>
                </form>

               
                </tr>
            <% } %>
        </tbody>
    </table>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>